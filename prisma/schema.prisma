generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Batman {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  name     String?
  username String  @unique
  passHash String
  rtHash   String?
  baseName String?
  city     String?

  officers                  Officer[]
  FriendRequestsFromBatman  FriendRequestsFromBatman[]
  FriendRequestsFromOfficer FriendRequestsFromOfficer[]
  house                     House[]
  ShoppingList              ShoppingList[]              @relation("DeliveredBy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("batmans")
}

model FriendRequestsFromBatman {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  status    FriendRequestStatus
  sender    Batman?             @relation(fields: [batmanId], references: [id], onDelete: Cascade)
  reciver   Officer?            @relation(fields: [officerId], references: [id], onDelete: Cascade)
  batmanId  String?             @db.Uuid
  officerId String?             @db.Uuid

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("friendRequestsFromBatman")
}

model Officer {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  name     String?
  username String  @unique
  passHash String
  rtHash   String?
  baseName String?
  city     String?

  batmans                   Batman[]
  FriendRequestsFromBatman  FriendRequestsFromBatman[]
  FriendRequestsFromOfficer FriendRequestsFromOfficer[]
  house                     House?
  ShoppingList              ShoppingList[]              @relation("DeliveredTo")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("officers")
}

model FriendRequestsFromOfficer {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  status    FriendRequestStatus
  sender    Officer?            @relation(fields: [officerId], references: [id], onDelete: Cascade)
  reciver   Batman?             @relation(fields: [batmanId], references: [id], onDelete: Cascade)
  officerId String?             @db.Uuid
  batmanId  String?             @db.Uuid

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("friendRequestsFromOfficer")
}

model House {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  houseType   HouseType
  houseNumber Int
  blockName   String?

  Batman    Batman? @relation(fields: [batmanId], references: [id], onDelete: Cascade)
  batmanId  String? @db.Uuid
  Officer   Officer @relation(fields: [officerId], references: [id], onDelete: Cascade)
  officerId String  @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("houses")
}

model ShoppingList {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  items       Item[]
  deliveredAt DateTime @db.Date
  daytime     Daytime

  deliveredBy Batman  @relation("DeliveredBy", fields: [batmanId], references: [id], onDelete: Cascade)
  batmanId    String
  deliveredTo Officer @relation("DeliveredTo", fields: [officerId], references: [id], onDelete: Cascade)
  officerId   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("shppingLists")
}

model Item {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  name     String
  price    Int
  quantity Int
  unit     Units

  ShoppingList   ShoppingList? @relation(fields: [shoppingListId], references: [id], onDelete: Cascade)
  shoppingListId String?       @db.Uuid

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("items")
}

enum FriendRequestStatus {
  pending
  accepted
  rejected
}

enum HouseType {
  banglow
  block
}

enum Units {
  none
  tonne
  dozen
  kilogram
  gram
  milligram
  pound
  ounce
  centimeter
  meter
  millimetre
  inch
  foot
}

enum Daytime {
  morning
  evening
}
